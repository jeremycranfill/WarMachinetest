@model WarMachine.ViewModels.AddWarcasterViewModel
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-controller="Add" asp-action="Warcaster" method="post">

    @Html.Partial("ModelForm")

    <div >
        <label asp-for="Focus"></label>
        <input class="form-control" asp-for="Focus">
        <span asp-validation-for="Focus"></span>
    </div>


    <div >
        <label asp-for="WarjackPoints"></label>
        <input class="form-control" asp-for="WarjackPoints">
        <span asp-validation-for="WarjackPoints"></span>
    </div>




    <div>
        <label asp-for="Feat"></label>
        <input class="form-control" asp-for="Feat">
        <span asp-validation-for="Feat"></span>
    </div>


    <br>
    <input type="submit" class="btn btn-success" />


</form>