@model WarMachine.ViewModels.AddSpellViewModel


<form asp-controller="Add" asp-action="Spell" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost"></label>
        <input class="form-control" asp-for="Cost" />
        <span asp-validation-for="Cost"></span>
    </div>

    <div class="form-group">
        <label asp-for="RNG"></label>
        <input class="form-control" asp-for="RNG" />
        <span asp-validation-for="RNG"></span>
    </div>

    <div class="form-group">
        <label asp-for="AOE"></label>
        <input class="form-control" asp-for="AOE" />
        <span asp-validation-for="AOE"></span>
    </div>

    <div class="form-group">
        <label asp-for="POW"></label>
        <input class="form-control" asp-for="POW" />
        <span asp-validation-for="POW"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
        <span asp-validation-for="Duration"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    
    
    <div class="form-group">
        <label asp-for="OFF"></label>
        <input class="form-control" asp-for="OFF" />
        <span asp-validation-for="OFF"></span>
    </div>

    <input type="submit" />


</form>