@model WarMachine.ViewModels.AddWarjackViewModel
@using static WarMachine.Models.WarModels.Warjack

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-controller="Add" asp-action="Warjack" method="post">

    @Html.Partial("ModelForm")

    <div class="form-group">
        <label asp-for="Size"></label>
        <select asp-items="Html.GetEnumSelectList<Sizes>()" asp-for="Size"></select>
        <span asp-validation-for="Size"></span>
    </div>






    <input type="submit" />


</form>

