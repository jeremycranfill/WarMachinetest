@model WarMachine.ViewModels.AddWarBeastViewModel
@using static WarMachine.Models.WarModels.WarBeast

<form asp-controller="Add" asp-action="Warbeast" method="post">

   @Html.Partial("ModelForm")

    <div class="form-group">
        <label asp-for="Fury"></label>
        <input class="form-control" asp-for="Fury" />
        <span asp-validation-for="Fury"></span>
    </div>

    <div class="form-group">
        <label asp-for="Threshold"></label>
        <input class="form-control" asp-for="Threshold" />
        <span asp-validation-for="Threshold"></span>
    </div>

         

    <div class="form-group">
        <label asp-for="Size"></label>
        <select asp-items="Html.GetEnumSelectList<sizes>()" asp-for="Size"></select>
        <span asp-validation-for="Size"></span>
    </div>







    <input type="submit" />


</form>