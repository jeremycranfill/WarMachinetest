@model WarMachine.ViewModels.Edit.EditWarjackViewModel
@using static WarMachine.ViewModels.BasedModelViewModel
@using static WarMachine.Models.WarModels.Warjack
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form asp-controller="Edit" asp-action="Warjack" method="post">

   
  

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>

    </div>


    <div class="form-group">
        <label asp-for="SPD"></label>
        <input class="form-control" asp-for="SPD" />
        <span asp-validation-for="SPD"></span>

    </div>

    <div class="form-group">
        <label asp-for="STR"></label>
        <input class="form-control" asp-for="STR" />
        <span asp-validation-for="STR"></span>
    </div>

    <div class="form-group">
        <label asp-for="MAT"></label>
        <input class="form-control" asp-for="MAT" />
        <span asp-validation-for="MAT"></span>
    </div>

    <div class="form-group">
        <label asp-for="RAT"></label>
        <input class="form-control" asp-for="RAT" />
        <span asp-validation-for="RAT"></span>
    </div>

    <div class="form-group">
        <label asp-for="DEF"></label>
        <input class="form-control" asp-for="DEF" />
        <span asp-validation-for="DEF"></span>
    </div>

    <div class="form-group">
        <label asp-for="ARM"></label>
        <input class="form-control" asp-for="ARM" />
        <span asp-validation-for="ARM"></span>
    </div>

    <div class="form-group">
        <label asp-for="CMD"></label>
        <input class="form-control" asp-for="CMD" />
        <span asp-validation-for="CMD"></span>
    </div>


    <div class="form-group">
        <label asp-for="FA"></label>
        <input class="form-control" asp-for="FA" />
        <span asp-validation-for="FA"></span>
    </div>



    <div class="form-group">
        <label asp-for="Faction"></label>
        <select class="form-control" asp-items="Html.GetEnumSelectList<FactionName>()" asp-for="Faction"></select>
        <span asp-validation-for="Faction"></span>
    </div>



    <div class="form-group">
        <label asp-for="PointCost"></label>
        <input class="form-control" asp-for="PointCost" />
        <span asp-validation-for="PointCost"></span>
    </div>


    <input type="hidden" name="ID" value="@Model.ID" />

    <input type="hidden" asp-for="currenntAbilIDs" />
    <input type="hidden" asp-for="currenntSpellIDs" />
    <input type="hidden" asp-for="currenntWeaponIDs" />





    <div class="form-group">
        <label asp-for="abilIDS"></label>
        <select multiple class="form-control" asp-for="abilIDS" asp-items="@Model.allAbills"></select>


    </div>








    <div class="form-group">
        <label asp-for="weapIDS"></label>
        <select multiple class="form-control" asp-for="weapIDS" asp-items="@Model.allWeaps"></select>

    </div>




    <div >
        <label asp-for="Size"></label>
        <select class="form-control"s asp-items="Html.GetEnumSelectList<Sizes>()" asp-for="Size"></select>
        <span asp-validation-for="Size"></span>
    </div>
    <br />
    <input type="hidden" asp-for="soloID" value="@Model.soloID" />



    <input type="submit" class="btn btn-success" />


</form>