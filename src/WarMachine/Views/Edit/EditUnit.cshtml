@model WarMachine.ViewModels.Edit.EditUnitViewModel




@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form asp-controller="Edit" asp-action="Unit" method="post">

    @Html.Partial("EditForm")


    <div class="form-group">
        <label asp-for="MaxUnit"></label>
        <input class="form-control" asp-for="MaxUnit" />
        <span asp-validation-for="MaxUnit"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinUnit"></label>
        <input class="form-control" asp-for="MinUnit" />
        <span asp-validation-for="MinUnit"></span>
    </div>
    <input type="hidden" asp-for="soloID" value="@Model.soloID" />



    <input type="submit" class="btn btn-success" />


</form>