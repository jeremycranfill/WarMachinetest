@model List<WarMachine.Models.WarModels.UnitModel>
@using WarMachine.Models.WarModels




<h1>@ViewBag.Title</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>SPD</th>
            <th>STR</th>
            <th>MAT</th>
            <th>RAT</th>
            <th>DEF</th>
            <th>ARM</th>
            <th>CMD</th>
           <th>Min Unit</th>
           <th>Max Unit</th>
           <th>Point Cost</th>
            <th>Edit</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <td>@unit.Name</td>
                <td>@unit.SPD</td>
                <td>@unit.STR</td>
                <td>@unit.MAT</td>
                <td>@unit.RAT</td>
                <td>@unit.DEF</td>
                <td>@unit.ARM</td>
                <td>@unit.CMD</td>
                <td>@unit.MinUnit</td>
                <td>@unit.MaxUnit</td>
                <td>@unit.PointCost</td>
                <td><a asp-controller="Edit" asp-action="Unit" asp-route-UnitID="@unit.ID">@unit.ID</a></td>


            </tr>


        }
    </tbody>
</table>
