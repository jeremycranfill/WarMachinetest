@using WarMachine.Models.WarModels
@model IList<Ability>

<h1>@ViewBag.Title</h1>



<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var ability in Model)
        {
            <tr>
                
                <td><a asp-controller="View" asp-action="Ability" asp-route-id="@ability.ID"> @ability.Name</a></td>
                <td>@ability.Description</td>
                <td><a asp-controller="Edit" asp-action="Ability" asp-route-UnitID="@ability.ID">Edit</a></td>

            </tr>


        }
    </tbody>

    </table>
