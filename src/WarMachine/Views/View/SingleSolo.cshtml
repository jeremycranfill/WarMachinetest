@model WarMachine.Models.WarModels.SoloModel
@using WarMachine.Models.WarModels



<h1>@ViewBag.Title</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>SPD</th>
            <th>STR</th>
            <th>MAT</th>
            <th>RAT</th>
            <th>DEF</th>
            <th>ARM</th>
            <th>CMD</th>
            <th>Point Cost</th>
            
        </tr>
    </thead>

    <tbody>
      
            <tr>
                <td>@Model.Name</td>
                <td>@Model.SPD</td>
                <td>@Model.STR</td>
                <td>@Model.MAT</td>
                <td>@Model.RAT</td>
                <td>@Model.DEF</td>
                <td>@Model.ARM</td>
                <td>@Model.CMD</td>
                <td>@Model.PointCost</td>
              </tr>
               
    </tbody>
</table>
<h3>Abilities</h3>
<table class="table table-sm">
  <thead><tr>
      <th>Name </th>
      <th> Description</th>
      </tr>
  </thead>

    <tbody>
        
            @foreach (Ability abil in @Model.Abilities)
            {
                <tr>
                    <td>@abil.Name </td>
                    <td>@abil.Description </td>
                </tr>
            }
             

    </tbody>



</table>
<br />

<a asp-controller="Edit" asp-action="Solo" asp-route-SoloId="@Model.ID">Edit </a>
