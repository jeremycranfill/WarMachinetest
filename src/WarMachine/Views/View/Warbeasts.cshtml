@model List<WarMachine.Models.WarModels.WarBeast>
@using WarMachine.Models.WarModels



<h1>@ViewBag.Title</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>SPD</th>
            <th>STR</th>
            <th>MAT</th>
            <th>RAT</th>
            <th>DEF</th>
            <th>ARM</th>
            <th>CMD</th>
            <th>Point Cost</th>
            <th>FA</th>
            <th>Size</th>
            <th>Fury</th>
            <th>Threshold</th>
            <th>Edit</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var beast in Model)
        {
            <tr>
                <td><a asp-controller="View" asp-action="Warbeast" asp-route-id="@beast.ID"> @beast.Name</a></td>
                <td>@beast.SPD</td>
                <td>@beast.STR</td>
                <td>@beast.MAT</td>
                <td>@beast.RAT</td>
                <td>@beast.DEF</td>
                <td>@beast.ARM</td>
                <td>@beast.CMD</td>
                <td>@beast.PointCost</td>
                <td>@beast.FA</td>
                <td>@beast.Size</td>
                <td>@beast.Fury</td>
                <td>@beast.Threshhold</td>
                
                <td><a asp-controller="Edit" asp-action="Warbeast"  asp-route-SoloId="@beast.ID">Edit</a></td>

            



            </tr>


        }
    </tbody>
</table>
