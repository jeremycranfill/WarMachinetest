@model List<WarMachine.Models.WarModels.SoloModel>
@using WarMachine.Models.WarModels



<h1>@ViewBag.Title</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>SPD</th>
            <th>STR</th>
            <th>MAT</th>
            <th>RAT</th>
            <th>DEF</th>
            <th>ARM</th>
            <th>CMD</th>
            <th>Point Cost</th>
            <th>FA</th>
            <th>Edit</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var solo in Model)
        {
            <tr>
                <td><a asp-controller="View" asp-action="Solo" asp-route-id="@solo.ID"> @solo.Name</a></td>
                <td>@solo.SPD</td>
                <td>@solo.STR</td>
                <td>@solo.MAT</td>
                <td>@solo.RAT</td>
                <td>@solo.DEF</td>
                <td>@solo.ARM</td>
                <td>@solo.CMD</td>
                <td>@solo.PointCost</td>
                <td>@solo.FA</td>
                <td><a asp-controller="Edit" asp-action="Solo"  asp-route-SoloId="@solo.ID">Edit</a></td>

            



            </tr>


        }
    </tbody>
</table>
